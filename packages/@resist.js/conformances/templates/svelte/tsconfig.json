{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2020",
    "lib": ["es2020", "DOM"],
    "target": "es2019",
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "types": ["node", "yargs", "cookie", "node-fetch", "nprogress", "ts-node"],
    "paths": {
      "$app/*": [".svelte-kit/dev/runtime/app/*", ".svelte-kit/build/runtime/app/*"]
    },
    "rootDir": "."
  },
  "include": [
    "project/**/*.d.ts",
    "project/*.d.ts",
    "project/*.d.ts",
    "project/**/*.js",
    "project/**/*.ts",
    "project/**/**/**/*.ts",
    "project/**/*.svelte",
    "config/svelte/**/*.ts"
  ],
  "exclude": ["node_modules/*", "dist/*", ".svelte/*", ".svelte-kit/*", "build/*", "coverage/*"]
}
